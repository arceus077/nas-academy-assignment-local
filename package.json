{
  "name": "nas-academy-assignment-service",
  "version": "1.0.0",
  "description": "Assignment for Nas Academy",
  "main": "app.ts",
  "scripts": {
    "build": "tsc",
    "start": "nodemon ./src/app.ts --exec ts-node ./src/app.ts",
    "test": "jest -i --forceExit --detectOpenHandles"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "collectCoverageFrom": [
      "**/*.ts"
    ],
    "transform": {
      ".+\\.(ts|tsx)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.json"
      }
    }
  },
  "author": "Suhail",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "ts-jest": "^26.5.5",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4"
  },
  "devDependencies": {
    "@types/jest": "^26.0.23",
    "jest": "^26.6.3",
    "nodemon": "^2.0.7",
    "pre-commit": "^1.2.2",
    "pre-push": "^0.1.1"
  }
}
